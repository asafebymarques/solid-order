{
    "name": "asafebymarques/solid-order",
    "description": "SOLID ORDER",
    "type": "project",
    "authors": [
        {
            "name": "Asafe Marques",
            "email": "asafebymarques@icloud.com"
        }
    ],
    "require": {
        "php": "7.4.24",
        "php-di/php-di": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpunit/php-code-coverage": "^9.2.3",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Order\\": "src/",
            "Tests\\":"tests/"
        }
    },
    "scripts": {
        "check-psr12": "phpcs --standard=PSR12 src",
        "test": "phpunit --colors=always",
        "test-coverage-html": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-html code-coverage"
    }
}